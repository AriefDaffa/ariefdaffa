---
import { Image } from 'astro:assets';

interface Props {
	title: string;
	date: string;
	desc: string;
	image: string;
    url: string;
}

const { url, date,desc,image,title } = Astro.props;
---

<a href={url} class="flex gap-4 w-full h-52  cursor-pointer">
    <div class="md:w-4/6 flex flex-col justify-between">
        <div>
            <div class="text-xs text-gray-text dark:text-gray-400">{date}</div>
            <div class="text-2xl font-bold pt-1 hover:text-primary">{title}</div>
            <div class="line-clamp-2 pt-2 text-gray-text dark:text-gray-400">{desc}</div>
        </div>
        <div class="text-sm font-semibold flex justify-end">
            <div class="hover:underline">Read More</div>
        </div>
    </div>
    <div class="w-2/6 rounded-md overflow-hidden hidden md:block">
        <Image src={image} alt="x" class="size-full object-cover" width={100} height={100} loading="eager" />
    </div>
</a>